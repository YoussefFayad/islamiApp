        <!-- Customize your light theme here. -->

        <item name="colorPrimary">@color/gold</item>
        <item name="colorPrimaryVariant">@color/goldVariant</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/white</item>
        <item name="android:statusBarColor">@color/goldVariant</item>
        <item name="android:navigationBarColor">@color/black</item>
    </style>

    <item name="buttonText" type="color">#ffffff</item>
    <item name="textColor" type="color">#000000</item>
    <item name="countView" type="color">#B7935F</item>
    <item name="buttonSebhaa" type="color">#B7935F</item>
    <item name="lineColor" type="color">#B7935F</item>

    <style name="Theme.IslamiApp" parent="Base.Theme.IslamiApp" />

    <style name="bottom_navigation_style">
        <item name="itemIconSize">40dp</item>
        <item name="itemIconTint">@color/bottom_navigation_color_selector</item>
        <item name="itemTextColor">@color/bottom_navigation_color_selector</item>
        <item name="itemBackground">@null</item>
        <item name="itemActiveIndicatorStyle">@null</item>
        <item name="android:background">@color/gold</item>

    </style>

</resources>